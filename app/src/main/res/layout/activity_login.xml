<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="90dp"

        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/main_img"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"

        android:text="Modi"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/edit_id_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/main_img"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@id/edit_id"
        android:src="@drawable/ic_launcher_background" />


    <EditText
        android:id="@+id/edit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/edit_pw_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/edit_id_img"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/edit_pw"

        android:src="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_id"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"

        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:text="로그인" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"

        android:text="회원가입" />

    <Button
        android:id="@+id/btn_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"

        android:text="비밀번호 찾기" />



</RelativeLayout>